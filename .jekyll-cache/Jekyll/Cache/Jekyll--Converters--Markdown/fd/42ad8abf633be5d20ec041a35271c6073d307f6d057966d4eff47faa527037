  </span><span class="n">do</span><span class="p">(</span><span class="n">p</span><span class="o">=</span><span class="n">Lc</span><span class="p">(</span><span class="n">.</span><span class="o">$</span><span class="n">FGA</span><span class="p">)</span><span class="o">$</span><span class="n">p</span><span class="p">,</span><span class="w"> </span><span class="n">L</span><span class="o">=</span><span class="n">Lc</span><span class="p">(</span><span class="n">.</span><span class="o">$</span><span class="n">FGA</span><span class="p">)</span><span class="o">$</span><span class="n">L</span><span class="p">)</span><span class="w"> </span><span class="o">%&gt;%</span><span class="w"> 
  </span><span class="n">unnest</span><span class="p">(</span><span class="n">p</span><span class="p">,</span><span class="n">L</span><span class="p">)</span><span class="w">

